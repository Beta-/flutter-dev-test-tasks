{
  "name": "Flutter Codespace",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "Dart-Code.flutter",
        "Dart-Code.dart-code"
      ],
      "settings": {
        "dart.flutterHotReloadOnSave": "all",
        "editor.formatOnSave": true,
        "editor.tabSize": 2,
        "files.autoSave": "afterDelay",
        "dart.previewFlutterUiGuides": true,
        "dart.showTodos": true,
        "dart.flutterSdkPath": "/workspaces/flutter"
      }
    }
  },
  "forwardPorts": [
    5000
  ],
  "postCreateCommand": "cd coding-task && flutter pub get",
  "remoteUser": "vscode"
}