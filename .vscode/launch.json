{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Coding Task (Flutter Web)",
      "request": "launch",
      "type": "dart",
      "program": "lib/main.dart",
      "cwd": "${workspaceFolder}/coding-task",
      "args": [
        "-d",
        "web-server",
        "--web-hostname=0.0.0.0",
        "--web-port=5000"
      ]
    }
  ]
}